<h1>All Discount Codes</h1>

<table class="table table-bordered table-hover">
  <tr>

    <th>Business Name</th>
    <th>Description</th>
    <th>Discount Code</th>
    <th>Percentage Off</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.business.name %></i></td>
    <td><%= coupon.desc %></td>
    <td><%= coupon.code %></td>
    <td><%= coupon.discount %></td>
    <td><%= link_to 'View', coupon, :class => 'btn btn-primary' %></td>

    <td><%= link_to 'Edit', edit_coupon_path(coupon), :class => 'btn btn-info' %></td>
    <td><%= link_to 'Remove', coupon, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

