<h1>All Discount Codes</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Bizname</th>
    <th>Desc</th>
    <th>Code</th>
    <th>Discount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.bizname %></td>
    <td><%= coupon.desc %></td>
    <td><%= coupon.code %></td>
    <td><%= coupon.discount %></td>
    <td><%= link_to 'Show', coupon, :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon), :class => 'btn btn-info' %></td>
    <td><%= link_to 'Destroy', coupon, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

